<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.sms.infrastructure.out.persistence.mapper.NumberingMasterMapper">

    <resultMap id="NumberingMasterResultMap" type="com.example.sms.domain.model.common.NumberingMaster">
        <id property="numberingCode" column="採番コード"/>
        <result property="numberingName" column="採番名"/>
        <result property="prefix" column="プレフィックス"/>
        <result property="format" column="採番形式"/>
        <result property="digits" column="桁数"/>
        <result property="currentValue" column="現在値"/>
        <result property="lastNumberingDate" column="最終採番日"/>
        <result property="resetTarget" column="リセット対象"/>
        <result property="createdAt" column="作成日時"/>
        <result property="updatedAt" column="更新日時"/>
    </resultMap>

    <insert id="insert" parameterType="com.example.sms.domain.model.common.NumberingMaster">
        INSERT INTO "採番マスタ" (
            "採番コード", "採番名", "プレフィックス", "採番形式",
            "桁数", "現在値", "最終採番日", "リセット対象",
            "作成日時", "更新日時"
        ) VALUES (
            #{numberingCode}, #{numberingName}, #{prefix}, #{format},
            #{digits}, #{currentValue}, #{lastNumberingDate}, #{resetTarget},
            CURRENT_TIMESTAMP, CURRENT_TIMESTAMP
        )
    </insert>

    <select id="findByNumberingCode" resultMap="NumberingMasterResultMap">
        SELECT * FROM "採番マスタ" WHERE "採番コード" = #{numberingCode}
    </select>

    <select id="findAll" resultMap="NumberingMasterResultMap">
        SELECT * FROM "採番マスタ" ORDER BY "採番コード"
    </select>

    <update id="update" parameterType="com.example.sms.domain.model.common.NumberingMaster">
        UPDATE "採番マスタ" SET
            "採番名" = #{numberingName},
            "プレフィックス" = #{prefix},
            "採番形式" = #{format},
            "桁数" = #{digits},
            "現在値" = #{currentValue},
            "最終採番日" = #{lastNumberingDate},
            "リセット対象" = #{resetTarget},
            "更新日時" = CURRENT_TIMESTAMP
        WHERE "採番コード" = #{numberingCode}
    </update>

    <delete id="deleteByNumberingCode">
        DELETE FROM "採番マスタ" WHERE "採番コード" = #{numberingCode}
    </delete>

    <!-- 全件削除 (PostgreSQL) -->
    <delete id="deleteAll" databaseId="postgresql">
        TRUNCATE TABLE "採番マスタ" CASCADE
    </delete>

    <!-- 全件削除 (H2) -->
    <delete id="deleteAll" databaseId="h2">
        DELETE FROM "採番マスタ"
    </delete>
</mapper>
