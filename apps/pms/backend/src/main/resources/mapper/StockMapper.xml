<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.pms.infrastructure.out.persistence.mapper.StockMapper">

    <resultMap id="StockResultMap" type="com.example.pms.domain.model.inventory.Stock">
        <id property="id" column="ID"/>
        <result property="locationCode" column="場所コード"/>
        <result property="itemCode" column="品目コード"/>
        <result property="stockQuantity" column="在庫数量"/>
        <result property="passedQuantity" column="合格数"/>
        <result property="defectiveQuantity" column="不良数"/>
        <result property="uninspectedQuantity" column="未検査数"/>
        <result property="createdAt" column="作成日時"/>
        <result property="createdBy" column="作成者"/>
        <result property="updatedAt" column="更新日時"/>
        <result property="updatedBy" column="更新者"/>
    </resultMap>

    <insert id="insert" parameterType="com.example.pms.domain.model.inventory.Stock"
            useGeneratedKeys="true" keyProperty="id" keyColumn="ID">
        INSERT INTO "在庫情報" (
            "場所コード", "品目コード", "在庫数量", "合格数", "不良数", "未検査数",
            "作成者", "更新者"
        ) VALUES (
            #{locationCode},
            #{itemCode},
            #{stockQuantity},
            #{passedQuantity},
            #{defectiveQuantity},
            #{uninspectedQuantity},
            #{createdBy},
            #{updatedBy}
        )
    </insert>

    <update id="update" parameterType="com.example.pms.domain.model.inventory.Stock">
        UPDATE "在庫情報" SET
            "在庫数量" = #{stockQuantity},
            "合格数" = #{passedQuantity},
            "不良数" = #{defectiveQuantity},
            "未検査数" = #{uninspectedQuantity},
            "更新日時" = CURRENT_TIMESTAMP,
            "更新者" = #{updatedBy}
        WHERE "ID" = #{id}
    </update>

    <select id="findById" resultMap="StockResultMap">
        SELECT * FROM "在庫情報" WHERE "ID" = #{id}
    </select>

    <select id="findByLocationAndItem" resultMap="StockResultMap">
        SELECT * FROM "在庫情報"
        WHERE "場所コード" = #{locationCode}
          AND "品目コード" = #{itemCode}
    </select>

    <select id="findByLocation" resultMap="StockResultMap">
        SELECT * FROM "在庫情報" WHERE "場所コード" = #{locationCode}
    </select>

    <select id="findByItem" resultMap="StockResultMap">
        SELECT * FROM "在庫情報" WHERE "品目コード" = #{itemCode}
    </select>

    <select id="findAll" resultMap="StockResultMap">
        SELECT * FROM "在庫情報" ORDER BY "場所コード", "品目コード"
    </select>

    <!-- PostgreSQL用 DELETE -->
    <delete id="deleteAll" databaseId="postgresql">
        TRUNCATE TABLE "在庫情報" CASCADE
    </delete>

    <!-- H2用 DELETE -->
    <delete id="deleteAll" databaseId="h2">
        DELETE FROM "在庫情報"
    </delete>
</mapper>
