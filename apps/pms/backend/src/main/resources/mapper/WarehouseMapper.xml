<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.pms.infrastructure.out.persistence.mapper.WarehouseMapper">

    <resultMap id="WarehouseResultMap" type="com.example.pms.domain.model.inventory.Warehouse">
        <id property="warehouseCode" column="倉庫コード"/>
        <result property="warehouseType" column="倉庫区分"/>
        <result property="warehouseName" column="倉庫名"/>
        <result property="departmentCode" column="部門コード"/>
        <result property="createdAt" column="作成日時"/>
        <result property="updatedAt" column="更新日時"/>
    </resultMap>

    <insert id="insert" parameterType="com.example.pms.domain.model.inventory.Warehouse">
        INSERT INTO "倉庫マスタ" (
            "倉庫コード", "倉庫区分", "倉庫名", "部門コード"
        ) VALUES (
            #{warehouseCode},
            #{warehouseType},
            #{warehouseName},
            #{departmentCode}
        )
    </insert>

    <update id="update" parameterType="com.example.pms.domain.model.inventory.Warehouse">
        UPDATE "倉庫マスタ" SET
            "倉庫区分" = #{warehouseType},
            "倉庫名" = #{warehouseName},
            "部門コード" = #{departmentCode},
            "更新日時" = CURRENT_TIMESTAMP
        WHERE "倉庫コード" = #{warehouseCode}
    </update>

    <select id="findByWarehouseCode" resultMap="WarehouseResultMap">
        SELECT * FROM "倉庫マスタ" WHERE "倉庫コード" = #{warehouseCode}
    </select>

    <select id="findByDepartmentCode" resultMap="WarehouseResultMap">
        SELECT * FROM "倉庫マスタ" WHERE "部門コード" = #{departmentCode}
    </select>

    <select id="findAll" resultMap="WarehouseResultMap">
        SELECT * FROM "倉庫マスタ" ORDER BY "倉庫コード"
    </select>

    <!-- PostgreSQL用 DELETE -->
    <delete id="deleteAll" databaseId="postgresql">
        TRUNCATE TABLE "倉庫マスタ" CASCADE
    </delete>

    <!-- H2用 DELETE -->
    <delete id="deleteAll" databaseId="h2">
        DELETE FROM "倉庫マスタ"
    </delete>
</mapper>
