<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.pms.infrastructure.out.persistence.mapper.IssueDetailMapper">

    <resultMap id="IssueDetailResultMap" type="com.example.pms.domain.model.inventory.IssueDetail">
        <id property="id" column="ID"/>
        <result property="issueNumber" column="払出番号"/>
        <result property="lineNumber" column="払出行番号"/>
        <result property="itemCode" column="品目コード"/>
        <result property="issueQuantity" column="払出数"/>
        <result property="createdAt" column="作成日時"/>
        <result property="createdBy" column="作成者"/>
        <result property="updatedAt" column="更新日時"/>
        <result property="updatedBy" column="更新者"/>
    </resultMap>

    <insert id="insert" parameterType="com.example.pms.domain.model.inventory.IssueDetail"
            useGeneratedKeys="true" keyProperty="id" keyColumn="ID">
        INSERT INTO "払出明細データ" (
            "払出番号", "払出行番号", "品目コード", "払出数",
            "作成者", "更新者"
        ) VALUES (
            #{issueNumber},
            #{lineNumber},
            #{itemCode},
            #{issueQuantity},
            #{createdBy},
            #{updatedBy}
        )
    </insert>

    <update id="update" parameterType="com.example.pms.domain.model.inventory.IssueDetail">
        UPDATE "払出明細データ" SET
            "品目コード" = #{itemCode},
            "払出数" = #{issueQuantity},
            "更新日時" = CURRENT_TIMESTAMP,
            "更新者" = #{updatedBy}
        WHERE "ID" = #{id}
    </update>

    <select id="findById" resultMap="IssueDetailResultMap">
        SELECT * FROM "払出明細データ" WHERE "ID" = #{id}
    </select>

    <select id="findByIssueNumberAndLineNumber" resultMap="IssueDetailResultMap">
        SELECT * FROM "払出明細データ"
        WHERE "払出番号" = #{issueNumber}
          AND "払出行番号" = #{lineNumber}
    </select>

    <select id="findByIssueNumber" resultMap="IssueDetailResultMap">
        SELECT * FROM "払出明細データ"
        WHERE "払出番号" = #{issueNumber}
        ORDER BY "払出行番号"
    </select>

    <select id="findAll" resultMap="IssueDetailResultMap">
        SELECT * FROM "払出明細データ" ORDER BY "払出番号", "払出行番号"
    </select>

    <!-- PostgreSQL用 DELETE -->
    <delete id="deleteAll" databaseId="postgresql">
        TRUNCATE TABLE "払出明細データ" CASCADE
    </delete>

    <!-- H2用 DELETE -->
    <delete id="deleteAll" databaseId="h2">
        DELETE FROM "払出明細データ"
    </delete>
</mapper>
